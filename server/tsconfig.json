{
  "extends": "../tsconfig.json",
  "include": ["src/**/*", "../shared/**/*"],
  "exclude": ["node_modules", "build", "dist"],
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2021",
    "outDir": "../dist/server",
    "noEmit": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node", "jest"],
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  }
}
